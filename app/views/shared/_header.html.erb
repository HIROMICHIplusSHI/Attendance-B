<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "Attendance App", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "トップ", root_path %></li>

        <% if logged_in? %>
          <!-- ログイン時：ドロップダウンメニューを表示 -->
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= current_user.name %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "プロフィール", current_user %></li>
              <li><%= link_to "設定", edit_user_path(current_user) %></li>

              <% if current_user.admin? %>
                <li class="divider"></li>
                <li class="dropdown-header">管理者メニュー</li>
                <li><%= link_to "ユーザー一覧", users_path %></li>
                <li><%= link_to "基本設定の修正", edit_basic_info_user_path(current_user) %></li>
              <% end %>

              <li class="divider"></li>
              <li>
                <%= link_to "ログアウト", logout_path, data: { "turbo-method": :delete } %>
              </li>
            </ul>
          </li>
        <% else %>
          <!-- 非ログイン時：ログインリンクを表示 -->
          <li><%= link_to "ログイン", login_path %></li>
        <% end %>

      </ul>
    </nav>
  </div>
</header>