<% provide(:title, "拠点情報追加") %>

<div class="modal-header">
  <h4 class="modal-title">拠点情報追加</h4>
  <button type="button" class="close" data-action="modal#close">&times;</button>
</div>

<% if flash[:danger] %>
  <div class="alert alert-danger" style="margin: 15px;">
    <%= flash[:danger] %>
  </div>
<% end %>

<div class="modal-body">
  <%= form_with(model: @office, local: true, html: { data: { remote: "true", confirm: "true", confirm_message: "この内容で拠点情報を追加してよろしいですか？" } }) do |f| %>

    <div class="form-group">
      <%= f.label :office_number, '拠点番号' %>
      <%= f.number_field :office_number, class: 'form-control', readonly: true %>
      <small class="form-text text-muted">※自動採番されます</small>
    </div>

    <div class="form-group">
      <%= f.label :name, '拠点地名' %>
      <%= f.text_field :name, class: 'form-control', placeholder: '例: 東京本社' %>
    </div>

    <div class="form-group">
      <%= f.label :attendance_type, '勤怠種類' %>
      <%= f.select :attendance_type, [['出勤', '出勤'], ['退勤', '退勤']], { include_blank: '選択してください' }, class: 'form-control' %>
    </div>

    <div class="modal-footer">
      <button type="button" class="btn btn-default" data-action="modal#close">キャンセル</button>
      <%= f.submit '追加', class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
