<% provide(:title, 'ユーザー一覧') %>
<h1>ユーザー一覧</h1>

<div class="col-md-10 col-md-offset-1">
  <!-- ページネーション（上部左・ボタン化） -->
  <div class="pagination-wrapper" style="margin-bottom: 20px;">
    <div class="btn-group" role="group" aria-label="ページナビゲーション">
      <% if @users.current_page > 1 %>
        <%= link_to "最初", users_path, class: "btn btn-default btn-sm" %>
        <%= link_to "前", users_path(page: @users.prev_page), class: "btn btn-default btn-sm" %>
      <% end %>

      <% (@users.current_page - 2..@users.current_page + 2).each do |page| %>
        <% if page >= 1 && page <= @users.total_pages %>
          <% if page == @users.current_page %>
            <span class="btn btn-primary btn-sm active"><%= page %></span>
          <% else %>
            <%= link_to page, users_path(page: page), class: "btn btn-default btn-sm" %>
          <% end %>
        <% end %>
      <% end %>

      <% if @users.current_page < @users.total_pages %>
        <%= link_to "次", users_path(page: @users.next_page), class: "btn btn-default btn-sm" %>
        <%= link_to "最後", users_path(page: @users.total_pages), class: "btn btn-default btn-sm" %>
      <% end %>
    </div>
  </div>

  <table class="table table-condensed table-hover" id="table-users">
    <thead>
      <tr>
        <th>名前</th>
        <th>メールアドレス</th>
        <th>部署</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= link_to user.name, user_path(user) %></td>
          <td><%= user.email %></td>
          <td><%= user.department %></td>
          <td>
            <%= link_to "編集", edit_user_path(user), class: "btn btn-primary btn-sm" %>
            <%= link_to "削除", user_path(user), method: :delete,
                        data: { confirm: "削除してよろしいですか？" },
                        class: "btn btn-danger btn-sm" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>